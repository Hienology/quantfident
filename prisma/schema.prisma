// Prisma schema for QuantFident blog system
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model (linked with Firebase Auth)
model User {
  id              String   @id
  firebaseUid     String   @unique // Firebase Auth UID
  email           String   @unique
  emailVerified   Boolean  @default(false)
  displayName     String?
  photoURL        String?
  role            Role     @default(USER)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  lastLoginAt     DateTime?
  totalLogins     Int      @default(0)

  // Relations
  posts           BlogPost[] @relation("AuthorPosts")
  sessions        UserSession[] @relation("UserSessions")
  sessionContexts SessionContext[] @relation("UserSessionContexts")
  sessionSnapshots SessionSnapshot[] @relation("UserSessionSnapshots")

  @@map("users")
}

// Blog post model
model BlogPost {
  id            String     @id @default(cuid())
  title         String
  slug          String     @unique
  content       String     // HTML content from rich text editor
  excerpt       String?
  status        PostStatus @default(DRAFT)
  category      String
  tags          String[]   // Array of tags
  featuredImage String?

  // Metadata
  readingTime   Int        @default(0) // in minutes
  views         Int        @default(0)
  likes         Int        @default(0)

  // Timestamps
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  publishedAt   DateTime?

  // Author relationship
  authorId      String
  author        User       @relation("AuthorPosts", fields: [authorId], references: [id], onDelete: Cascade)

  // Comments relationship (future feature)
  comments      Comment[]

  @@map("blog_posts")
}

// Comments on blog posts (future feature)
model Comment {
  id        String   @id @default(cuid())
  content   String
  authorId  String
  authorName String
  authorEmail String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Post relationship
  postId    String
  post      BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("comments")
}

// User Sessions - tracks active and past sessions
model UserSession {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation("UserSessions", fields: [userId], references: [id], onDelete: Cascade)
  
  // Session metadata
  sessionId     String   @unique // Browser/device session ID
  deviceName    String?  // e.g., "Chrome on Windows"
  deviceType    String?  // "desktop", "mobile", "tablet"
  ipAddress     String?
  userAgent     String?
  
  // Session state
  isActive      Boolean  @default(true)
  lastActivityAt DateTime @default(now()) @updatedAt
  createdAt     DateTime @default(now())
  expiresAt     DateTime
  
  // Session context (UI state, preferences, etc.)
  context       SessionContext? @relation("SessionToContext")
  snapshots     SessionSnapshot[] @relation("SessionSnapshots")
  
  @@index([userId])
  @@index([sessionId])
  @@map("user_sessions")
}

// Session context - stores UI state, preferences, and application state
model SessionContext {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation("UserSessionContexts", fields: [userId], references: [id], onDelete: Cascade)
  
  // Link to current session
  sessionId     String   @unique
  session       UserSession @relation("SessionToContext", fields: [sessionId], references: [id], onDelete: Cascade)
  
  // Context data stored as JSON
  contextData   Json     @default("{}")
  
  // Metadata
  updatedAt     DateTime @updatedAt
  createdAt     DateTime @default(now())
  
  @@index([userId])
  @@map("session_contexts")
}

// Session snapshots - for session recovery and history
model SessionSnapshot {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation("UserSessionSnapshots", fields: [userId], references: [id], onDelete: Cascade)
  
  sessionId     String?
  session       UserSession? @relation("SessionSnapshots", fields: [sessionId], references: [id], onDelete: SetNull)
  
  // Snapshot data
  snapshotData  Json     @default("{}")
  snapshotName  String?  // Optional user-defined name
  
  // Timestamp tracking
  createdAt     DateTime @default(now())
  expiresAt     DateTime @default(dbgenerated("now() + interval '30 days'"))
  
  // Metadata
  isManual      Boolean  @default(false) // User manually created snapshot
  source        String   @default("auto") // "auto", "manual", "scheduled"
  
  @@index([userId])
  @@index([sessionId])
  @@map("session_snapshots")
}

// Enums
enum Role {
  USER
  ADMIN
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}